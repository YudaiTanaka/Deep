<div class="row form user_profile">
  <div class="col-lg-12">

    <h4><a>ユーザー名：<%= @user.nickname %></a></h4>

    <% if current_user.id == @user.id %>
      <div class="profile_edit">
        <%= link_to "プロフィールを編集する", edit_user_path(current_user), {:class => "btn btn-primary withripple" }%>
      </div>

      <%= form_for @user do |f| %>
          <div class="field">
          <%= f.file_field :avatar %>
          </div>
      <% end %>

    <% end %>
  </div>
</div>
