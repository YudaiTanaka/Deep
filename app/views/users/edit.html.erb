<div class="row form">
  <div class="col-lg-12">
    <%= form_for current_user do |f| %>
      <h3>プロフィール画像</h3>
      <div class="form-group file">
        <%= f.file_field :avatar, class: "form-control floating-label", placeholder: "画像アップロード" %>
      </div>
      <h3>登録情報</h3>
      <div class="form-group">
        <div class="col-lg-6">
          <%= f.text_field :nickname, placeholder: "ニックネーム", class: "form-control" %>
        </div>
        <div class="col-lg-6">
          <%= f.text_field :text, placeholder: "プロフィール文", class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit "送信", class: "btn btn-primary withripple" %>
      </div>
    <% end %>
  </div>
</div>
